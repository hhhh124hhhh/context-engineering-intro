# Application Configuration
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-must-be-at-least-32-characters-long

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/card_battle_arena
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_HOSTS=http://localhost:5173,http://127.0.0.1:5173

# Game Configuration
MAX_DECK_SIZE=30
STARTING_HAND_SIZE=5
MAX_MANA=10
TURN_TIME_LIMIT_SECONDS=90

# Matching System
ELO_INITIAL_RATING=1000
MATCHMAKING_TIMEOUT_SECONDS=300
MAX_MATCHMAKING_RANGE=200

# WebSocket Configuration
WS_CONNECTION_TIMEOUT_SECONDS=3600
WS_HEARTBEAT_INTERVAL_SECONDS=30
WS_MAX_MESSAGE_SIZE=1048576

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Uploads
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Card Battle Arena

# External Services (Optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_SPECTATOR_MODE=true
ENABLE_TOURNAMENTS=false

# Cache Settings
CACHE_TTL_SECONDS=300
CARD_CACHE_TTL_SECONDS=3600